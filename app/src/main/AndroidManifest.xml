<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utd.ece.medibluenet">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:hardwareAccelerated="false"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FriendListView" />
        <activity android:name=".FriendRequestsListView" />
        <activity android:name=".RequestFriend" />
        <activity android:name=".BiometricGraphView"></activity>
        <activity
            android:name=".FriendBiometricSelector"
            android:label="@string/title_activity_friend_biometric_selector"
            android:theme="@style/AppTheme.NoActionBar"
            android:hardwareAccelerated="false"></activity>
    </application>

</manifest>